@startuml 3GStore_AuthService_Code
!include https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Code.puml

LAYOUT_WITH_LEGEND()

title 3GStore - AuthService - Diagrama de Código

Container(AcessoEstoque, "AcessoEstoque - API", "Node.js", "Container responsável pelo acesso ao estoque")

Component(AuthService, "AuthService", "Node.js", "Valida credenciais, gera tokens JWT e gerencia sessões")

Package(AuthServicePackage, "AuthService") {

    Class(AuthService, "AuthService", "Classe principal que orquestra o processo de autenticação e geração de token")
    Class(PasswordHasher, "PasswordHasher", "Lida com hashing e verificação de senhas usando bcrypt")
    Class(TokenGenerator, "TokenGenerator", "Gera e valida tokens JWT")
    Class(UserValidator, "UserValidator", "Valida os dados e status do usuário")
}

Rel(AuthService, PasswordHasher, "Usa para validar senhas")
Rel(AuthService, TokenGenerator, "Usa para gerar e validar JWT")
Rel(AuthService, UserValidator, "Usa para validar dados do usuário")

@enduml
